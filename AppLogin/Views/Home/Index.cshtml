@using System.Security.Claims;

@{
    ViewData["Title"] = "Home Page";
}
<div class="container">
    <div class="centered-text d-flex justify-content-center align-items-center vh-90">

        <div class="row text-center">
            <div class="col-md-12">
                @if (User.Identity!.IsAuthenticated)
                {
                    <h1 class="display-4">
                        Bienvenido Al Sistema
                        @User.Claims.Where(c => c.Type == ClaimTypes.Name).Select(c => c.Value).SingleOrDefault()
                    </h1>
                }
            </div>
        </div>
        <br />
        <div class="row mt-3 text-center">
            <div class="col-md-12">
                <img src="~/images/images.jpg" class="img-fluid" style="max-width: 100%; height: auto;" />
            </div>
        </div>

    </div>
</div>