@model AppLogin.ViewModels.nuevaFacturaVM

<html>
<head>
    <title>Crear nueva factura</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
</head>
<body style="background-color: darkolivegreen">
    <div class="container">
        <h2>Nueva Factura</h2>

        <form asp-controller="Factura" asp-action="Nueva" method="post">
            <div class="row justify-content-center">
                <div class="col-md-6">
                    <div class="form-group">
                        <label asp-for="Fecha" class="control-label">Fecha</label>
                        <input asp-for="Fecha" class="form-control" readonly />
                        <span asp-validation-for="Fecha" class="text-danger"></span>
                    </div>

                    <div class="form-group">
                        <label asp-for="IdCliente" class="control-label">Cliente</label>
                        <select asp-for="IdCliente" asp-items="@Model.Clientes" class="form-control" id="IdCliente">
                            <option value="">Seleccione un cliente</option>
                        </select>
                        <span asp-validation-for="IdCliente" class="text-danger"></span>
                    </div>

                    <div class="form-group">
                        <label class="control-label-sm">Nombre del Cliente</label>
                        <input id="NombreCliente" class="form-control form-control-sm" readonly />
                    </div>

                    <div class="form-group">
                        <label class="control-label-sm">Apellido del Cliente</label>
                        <input id="ApellidoCliente" class="form-control form-control-sm" readonly />
                    </div>

                    <div class="form-group">
                        <label class="control-label-sm">Cédula del Cliente</label>
                        <input id="CedulaCliente" class="form-control form-control-sm" readonly />
                    </div>

                    <div class="form-group">
                        <label class="control-label-sm">Dirección del Cliente</label>
                        <input id="DireccionCliente" class="form-control form-control-sm" readonly />
                    </div>

                    <div class="form-group">
                        <label class="control-label-sm">Teléfono del Cliente</label>
                        <input id="TelefonoCliente" class="form-control form-control-sm" readonly />
                    </div>
                </div>

                <div class="col-md-6">
                    <div class="form-group">
                        <label class="control-label-sm">Productos</label>
                        <div class="input-group">
                            <select id="IdProducto" class="form-control">
                                <option value="">Seleccione un producto</option>
                                @foreach (var producto in Model.Productos)
                                {
                                    <option value="@producto.Value">@producto.Text</option>
                                }
                            </select>
                        </div>
                    </div>

                    <div class="form-group">
                        <label class="control-label-sm">Cantidad</label>
                        <input type="number" id="Cantidad" class="form-control" />
                    </div>

                    <div class="form-group">
                        <label class="control-label-sm">Precio</label>
                        <input type="number" id="Precio" class="form-control" />
                    </div>

                    <div class="form-group">
                        <label class="control-label-sm">Descuento</label>
                        <input type="number" id="Descuento" class="form-control" />
                    </div>

                    <div class="form-group">
                        <button type="button" id="btnAgregar" class="btn btn-primary">Agregar</button>
                    </div>
                </div>
            </div>

            <h3>Detalle de la Factura</h3>
            <div class="form-group">
                <table class="table">
                    <thead>
                        <tr>
                            <th>Producto</th>
                            <th>Cantidad</th>
                            <th>Precio</th>
                            <th>Descuento</th>
                            <th>Total</th>
                            <th></th>
                        </tr>
                    </thead>
                    <tbody id="tablaDetalle">
                        @foreach (var detalle in Model.DetalleFactura)
                        {
                            <tr>
                                <td>@detalle.Producto.nombre</td>
                                <td><input type="number" class="form-control" name="DetalleFactura[@Model.DetalleFactura.IndexOf(detalle)].Cantidad" value="@detalle.Cantidad" readonly /></td>
                                <td><input type="number" class="form-control" name="DetalleFactura[@Model.DetalleFactura.IndexOf(detalle)].Precio" value="@detalle.Precio" readonly /></td>
                                <td><input type="number" class="form-control" name="DetalleFactura[@Model.DetalleFactura.IndexOf(detalle)].Descuento" value="@detalle.Descuento" readonly /></td>
                                <td><input type="text" class="form-control" name="DetalleFactura[@Model.DetalleFactura.IndexOf(detalle)].Total" value="@detalle.Total" readonly /></td>
                                <td><button type="button" class="btn btn-danger btn-sm btnEliminarFila">Eliminar</button></td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
            <!-- Botón para calcular suma de totales -->
            <div class="form-group">
                <button type="button" id="btnCalcular" class="btn btn-success">Calcular Suma de Totales</button>
            </div>
            <!-- Campo de entrada para mostrar la suma de totales -->
            <div class="form-group">
                <label class="control-label-sm">Suma de Totales</label>
                <input id="SumaTotales" name="SumaTotales" class="form-control form-control-sm" readonly />
            </div>

            <div class="form-group">
                <label class="control-label-sm">Subtotal</label>
                <input id="Subtotal" name="Subtotal" class="form-control form-control-sm" readonly />
            </div>

            <div class="form-group">
                <label class="control-label-sm">IVA (12%)</label>
                <input id="Iva" name="Iva" class="form-control form-control-sm" readonly />
            </div>

            <div class="form-group">
                <label class="control-label-sm">Total</label>
                <input id="Total" name="Total" class="form-control form-control-sm" readonly />
            </div>



            <button type="submit" class="btn btn-primary">Guardar Factura</button>
        </form>
    </div>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>

    <script>
        var index = @Model.DetalleFactura.Count;

        // Función para agregar un producto a la tabla
        document.getElementById('btnAgregar').addEventListener('click', function () {
            var productoId = document.getElementById('IdProducto').value;
            var cantidad = parseFloat(document.getElementById('Cantidad').value);
            var precio = parseFloat(document.getElementById('Precio').value);
            var descuento = parseFloat(document.getElementById('Descuento').value);

            if (productoId && !isNaN(cantidad) && !isNaN(precio) && !isNaN(descuento)) {
                var total = cantidad * precio - descuento;
                var nombreProducto = $('#IdProducto option:selected').text();
                var fila = `<tr>
                                        <td>${nombreProducto}</td>
                                        <td><input type="number" class="form-control cantidad" name="DetalleFactura[${index}].Cantidad" value="${cantidad}" readonly /></td>
                                        <td><input type="number" class="form-control precio" name="DetalleFactura[${index}].Precio" value="${precio}" readonly /></td>
                                        <td><input type="number" class="form-control descuento" name="DetalleFactura[${index}].Descuento" value="${descuento}" readonly /></td>
                                        <td><input type="text" class="form-control total" name="DetalleFactura[${index}].Total" value="${total.toFixed(2)}" readonly /></td>
                                        <td><button type="button" class="btn btn-danger btn-sm btnEliminarFila">Eliminar</button></td>
                                    </tr>`;
                document.getElementById('tablaDetalle').insertAdjacentHTML('beforeend', fila);
                index++;
                calcularTotales();
            } else {
                alert('Debe seleccionar un producto y completar los campos de cantidad, precio y descuento.');
            }
        });

        // Función para eliminar una fila de la tabla
        document.getElementById('tablaDetalle').addEventListener('click', function (event) {
            if (event.target && event.target.classList.contains('btnEliminarFila')) {
                event.target.closest('tr').remove();
                calcularTotales();
            }
        });

        // Función para calcular los totales
        function calcularTotales() {
            var subtotal = 0;
            var filas = document.querySelectorAll('#tablaDetalle tbody tr');
            filas.forEach(function (fila) {
                var totalProducto = parseFloat(fila.querySelector('.total').value);
                subtotal += totalProducto;
            });

            var iva = subtotal * 0.12; // Calcular el IVA (12%)
            var total = subtotal + iva;

            document.getElementById('Subtotal').value = subtotal.toFixed(2);
            document.getElementById('Iva').value = iva.toFixed(2);
            document.getElementById('Total').value = total.toFixed(2);
        }

        // Función para calcular la suma de los totales
        document.getElementById('btnCalcular').addEventListener('click', function () {
            var sumaTotales = 0;
            var filas = document.querySelectorAll('#tablaDetalle tbody tr');
            filas.forEach(function (fila) {
                var totalProducto = parseFloat(fila.querySelector('.total').value);
                sumaTotales += totalProducto;
            });
            document.getElementById('SumaTotales').value = sumaTotales.toFixed(2);
        });

        // Agregar el evento para calcular totales cuando cambia cualquier input de cantidad o descuento
        document.addEventListener('input', function (event) {
            if (event.target && event.target.name && event.target.name.startsWith('DetalleFactura') && (event.target.name.endsWith('.Cantidad') || event.target.name.endsWith('.Descuento'))) {
                var row = event.target.closest('tr');
                var cantidad = parseFloat(row.querySelector('input[name$=".Cantidad"]').value);
                var precio = parseFloat(row.querySelector('input[name$=".Precio"]').value);
                var descuento = parseFloat(row.querySelector('input[name$=".Descuento"]').value);
                var total = cantidad * precio - descuento;
                row.querySelector('input[name$=".Total"]').value = total.toFixed(2);
                calcularTotales();
            }
        });

        // Obtener datos del cliente al seleccionar uno
        document.getElementById('IdCliente').addEventListener('change', function () {
            var clienteId = this.value;
            if (clienteId) {
                fetch('@Url.Action("ObtenerDatosCliente", "Factura")?clienteId=' + clienteId)
                    .then(response => response.json())
                    .then(data => {
                        document.getElementById('NombreCliente').value = data.nombre;
                        document.getElementById('ApellidoCliente').value = data.apellido;
                        document.getElementById('CedulaCliente').value = data.cedula;
                        document.getElementById('DireccionCliente').value = data.direccion;
                        document.getElementById('TelefonoCliente').value = data.telefono;
                    })
                    .catch(error => {
                        console.error('Error al obtener los datos del cliente:', error);
                        alert('Error al cargar los datos del cliente.');
                    });
            } else {
                document.getElementById('NombreCliente').value = '';
                document.getElementById('ApellidoCliente').value = '';
                document.getElementById('CedulaCliente').value = '';
                document.getElementById('DireccionCliente').value = '';
                document.getElementById('TelefonoCliente').value = '';
            }
        });
    </script>
</body>
</html>

